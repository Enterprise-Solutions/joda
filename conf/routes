# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

GET     /usuarios					controllers.UsuariosController.index()
GET		/usuarios/email/:email/nombre/:nombre		    controllers.UsuariosController.get(email:String,nombre: String)

POST	/usuarios					controllers.UsuariosController.crearUsuario()
DELETE	/usuarios/:email			controllers.UsuariosController.borrar(email)

DELETE	/marcaciones/:user_id		controllers.MarcacionesController.borrartodo(user_id:Long)
GET		/marcaciones				controllers.MarcacionesController.listado()
#GET		/marcaciones				controllers.MarcacionesController.index()

DELETE	/lugares/:nombre			controllers.LugaresController.borrar(nombre)
POST	/marcaciones				controllers.MarcacionesController.crearMarcacion()

GET		/maxmarcacion/:email/:fecha				controllers.UsuariosController.marcacionMax(email:String, fecha:String)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
